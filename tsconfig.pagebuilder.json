{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/page-builder/assets/*"],
            "@themes/*": ["./themes/*"],
            "@resources/*": ["./resources/*"]
        }
    },
    "include": [
        "types/**/*.d.ts",
        "resources/page-builder/assets/**/*.ts",
        "resources/page-builder/assets/**/*.tsx",
        "resources/page-builder/assets/**/*.vue"
    ],
    "exclude": ["node_modules", "vendor", "storage", "public"]
}
