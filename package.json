{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build && npm run build:themes",
        "dev": "vite --port 5177",
        "build:themes": "tsx themes.ts build",
        "dev:themes": "tsx themes.ts dev",
        "build:all": "npm run build && npm run build:page-builder",
        "build:page-builder": "vite build --config vite.pagebuilder.config.js",
        "dev:page-builder": "vite --config vite.pagebuilder.config.js",
        "postbuild:page-builder": "cp public/build/page-builder/.vite/manifest.json public/build/page-builder/manifest.json"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-vue": "^5.2.4",
        "autoprefixer": "^10.4.19",
        "axios": "^1.7.4",
        "bootstrap": "^5.3.0",
        "concurrently": "^9.2.0",
        "detect-port": "^2.1.0",
        "jquery": "^3.7.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.38",
        "postcss-import": "^16.1.0",
        "sass": "^1.78.0",
        "sass-loader": "^16.0.0",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.20.3",
        "vite": "^6.3.5",
        "vue": "^3.5.16"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.23",
        "@popperjs/core": "^2.11.8",
        "bootstrap-icons": "^1.13.1",
        "pinia": "^3.0.2",
