{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build && npm run build:themes && npm run build:page-builder",
        "dev": "vite --port 5177",
        "build:themes": "tsx themes.ts build",
        "dev:themes": "tsx themes.ts dev",
        "build:all": "npm run build && npm run build:page-builder",
        "build:page-builder": "vite build --config vite.pagebuilder.config.ts",
        "dev:page-builder": "vite --config vite.pagebuilder.config.ts --port 5178",
        "dev:all": "concurrently \"npm run dev\" \"npm run dev:themes\" \"npm run dev:page-builder\"",
        "postbuild:page-builder": "echo 'Page builder build completed'",
        "type-check": "tsc --noEmit",
        "type-check:themes": "tsc --project tsconfig.themes.json --noEmit",
        "type-check:pagebuilder": "tsc --project tsconfig.pagebuilder.json --noEmit",
        "type-check:all": "npm run type-check && npm run type-check:themes && npm run type-check:pagebuilder"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^24.7.2",
        "@vitejs/plugin-vue": "^5.2.4",
        "autoprefixer": "^10.4.19",
        "axios": "^1.7.4",
        "bootstrap": "^5.3.0",
        "concurrently": "^9.2.0",
        "detect-port": "^2.1.0",
        "jquery": "^3.7.0",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.38",
        "postcss-import": "^16.1.0",
        "sass": "^1.78.0",
        "sass-loader": "^16.0.0",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.20.3",
        "vite": "^6.3.5",
        "vue": "^3.5.16"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "@headlessui/vue": "^1.7.23",
        "@popperjs/core": "^2.11.8",
        "bootstrap-icons": "^1.13.1",
        "grapesjs": "^0.22.13",
        "pinia": "^3.0.2",
        "swiper": "^11.2.10",
        "typescript": "^5.8.3",
        "vuedraggable": "^4.1.0"
    }
}
