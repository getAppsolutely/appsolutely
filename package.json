{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build && npm run build:themes && npm run build:page-builder",
        "dev": "vite --port 5177",
        "build:themes": "tsx themes.ts build",
        "dev:themes": "tsx themes.ts dev",
        "build:all": "npm run build && npm run build:page-builder",
        "build:page-builder": "vite build --config vite.pagebuilder.config.ts",
        "dev:page-builder": "vite --config vite.pagebuilder.config.ts --port 5178",
        "dev:all": "concurrently \"npm run dev\" \"npm run dev:themes\" \"npm run dev:page-builder\"",
        "postbuild:page-builder": "echo 'Page builder build completed'",
        "type-check": "tsc --noEmit",
        "type-check:themes": "tsc --project tsconfig.themes.json --noEmit",
        "type-check:pagebuilder": "tsc --project tsconfig.pagebuilder.json --noEmit",
        "type-check:all": "npm run type-check && npm run type-check:themes && npm run type-check:pagebuilder",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:scss": "stylelint '**/*.scss' --allow-empty-input",
        "lint:scss:fix": "stylelint '**/*.scss' --fix --allow-empty-input",
        "lint:all": "npm run lint && npm run lint:scss",
        "lint:all:fix": "npm run lint:fix && npm run lint:scss:fix",
        "format": "prettier --write '**/*.{scss,css,ts,tsx,js,jsx,json,md,html,vue}'",
        "format:check": "prettier --check '**/*.{scss,css,ts,tsx,js,jsx,json,md,html,vue}'",
        "format:scss": "prettier --write '**/*.scss'",
        "format:all": "npm run format && npm run lint:all:fix",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@tailwindcss/vite": "^4.0.0",
        "@types/bootstrap": "^5.2.10",
        "@types/eslint": "^9.6.1",
        "@types/lodash": "^4.17.20",
        "@types/node": "^24.7.2",
        "@typescript-eslint/eslint-plugin": "^8.46.1",
        "@typescript-eslint/parser": "^8.46.1",
        "@vitejs/plugin-vue": "^5.2.4",
        "autoprefixer": "^10.4.19",
        "axios": "^1.7.4",
        "bootstrap": "^5.3.0",
        "concurrently": "^9.2.0",
        "detect-port": "^2.1.0",
        "eslint": "^9.37.0",
        "husky": "^9.1.7",
        "jquery": "^3.7.0",
        "laravel-vite-plugin": "^1.2.0",
        "lint-staged": "^16.2.4",
        "postcss": "^8.4.38",
        "postcss-import": "^16.1.0",
        "postcss-load-config": "^6.0.1",
        "postcss-scss": "^4.0.9",
        "prettier": "^3.6.2",
        "sass": "^1.78.0",
        "sass-loader": "^16.0.0",
        "stylelint": "^16.25.0",
        "stylelint-config-prettier-scss": "^1.0.0",
        "stylelint-config-standard-scss": "^16.0.0",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.20.3",
        "vite": "^6.3.5",
        "vue": "^3.5.16"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "@headlessui/vue": "^1.7.23",
        "@popperjs/core": "^2.11.8",
        "bootstrap-icons": "^1.13.1",
        "grapesjs": "^0.22.13",
        "pinia": "^3.0.2",
        "swiper": "^11.2.10",
        "typescript": "^5.8.3",
        "vuedraggable": "^4.1.0"
    },
    "lint-staged": {
        "*.php": [
            "./vendor/bin/pint"
        ],
        "*.scss": [
            "prettier --write",
            "stylelint --fix"
        ],
        "*.{css,ts,tsx,js,jsx,json,md,html,vue}": [
            "prettier --write"
        ]
    }
}
